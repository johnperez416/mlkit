<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/language_layout"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="10dp"
            android:text="Locale"
            android:textSize="20sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp">
            <AutoCompleteTextView
                android:id="@+id/language_spinner"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingVertical="20dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mode_layout"
        android:gravity="center_vertical"
        android:layout_below="@id/language_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="10dp"
            android:text="Mode"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/mode_spinner"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingVertical="20dp"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/audiosource_layout"
        android:gravity="center_vertical"
        android:layout_below="@id/mode_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="10dp"
            android:text="AudioSource"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/audiosource_spinner"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp" />
    </LinearLayout>
    <ScrollView
        android:layout_above="@id/download_button"
        android:layout_below="@id/audiosource_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/text_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:textSize="24sp" />
    </ScrollView>
    <Button
        android:id="@+id/download_button"
        android:layout_above="@+id/mic_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:text="Download" />
    <Button
        android:id="@+id/mic_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:text="Start Recording" />
</RelativeLayout>
